<!-- GridGroup allows to easily keep actors in
    a grid layout. -->

<container width=100>
    <gridGroup itemSize=22 spacing=2>
<!-- Spawning 16 images: -->
        <:loop 16>
            <image style=icon-trash/>
        </:loop>
    </gridGroup>
</container>

<!-- If item size and spacing are not specified,
    uses default values. Plain text is converted to
    labels. -->