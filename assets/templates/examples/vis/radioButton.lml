<!-- Radio buttons are extended check boxes, using a different
    default style. Radio button tags behave exactly like check
    box tags. -->

<radioButton onChange=switchCase>click me!</radioButton>

<radioButton text=Original.>
    <label row=true>Additional label.</label>
    <label colspan=3>Another row of labels.</label>
</radioButton>

<!-- Since radio buttons consist of a label and an image, they
     can also have their attributes. -->