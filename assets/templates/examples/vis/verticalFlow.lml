<!-- VerticalFlowGroup is a specialized widget group
    that stores actors in columns. As soon as the vertical
    space is filled, another column is created.-->

<container height=300>
    <verticalFlow spacing=1>
        <!-- Spawning 20 buttons: -->
        <:loop 20>
            <textButton>Example{loop:index}</textButton>
        </:loop>
    </verticalFlow>
</container>

<!-- Try resizing the container to check its behavior. -->

<!-- VerticalFlowGroup can be used in a drag pane with
    type=vflow attribute. -->