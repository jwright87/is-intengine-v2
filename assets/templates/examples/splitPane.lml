<!-- Split panes can have 2 children
    that will be displayed on a split area. -->
    
<splitPane vertical=true>
    Text is converted to labels.
    <textButton>Any widgets are accepted</textButton>
</splitPane>

<!-- Normally, splitting bar can be moved
    by dragging. If you want a fixed split
    value, modify touchable status. -->
    
<splitPane touchable=childrenOnly split=0.2>
    I will be partially hidden.
    <textButton>I will take most of the space</textButton>
</splitPane>