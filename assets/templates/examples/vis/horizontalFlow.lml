<!-- HorizontalFlowGroup is a specialized widget group
    that stores actors in rows. As soon as the horizontal
    space is filled, another row is created.-->

<container width=200>
    <horizontalFlow spacing=1>
        <!-- Spawning 20 buttons: -->
        <:loop 20>
            <textButton>Example{loop:index}</textButton>
        </:loop>
    </horizontalFlow>
</container>

<!-- Try resizing the container to check its behavior. -->

<!-- HorizontalFlowGroup can be used in a drag pane with
    type=hflow attribute. -->